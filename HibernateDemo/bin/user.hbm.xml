<?xml version = "1.0" encoding = "utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
	<class name="mypack.DataProvider" table="user_info">

		<!-- <meta attribute = "class-description">This class contains the employee 
			detail.</meta> -->

		<id name="user_id" type="int" column="id">
			<generator class="assigned" />
		</id>

		<property name="user_name" column="name" />
		<property name="user_address" column="address" />


	</class>
</hibernate-mapping>